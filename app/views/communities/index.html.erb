 <div class="communities-index">
  <div class="communities-info">
    <h2>Find and Join Your Favorite Gaming Communities</h2>
  </div>
  <div class="search-cmt">
    <%= simple_form_for :index, url: communities_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="query" id="search_query" />
      <button type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
   <% end %>
  </div>
  <div class="cmt-cards-container">
      <div class="cmt-cards">
        <% @communities.each do |community| %>
          <div class="card-seed" style="background-image:linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url('<%=community.img_url%>')">
            <h3> <%= community.title %> </h3>
              <%= link_to "Join", ("communities/#{community.id}/posts"), class: "a" %>
            <span></span>
            <span></span>
            <span></span>
        </div>
        <% end %>
      </div>
    </div>
</div>





