<div class="main-card card-banner" style='background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), image-url("mf.jpg")'>
  <h1 class="list-title"><%= @community.title %></h1>
</div>

<div class="main-page">
  <div class="sidebar">
    <ul>
      <li><i class="fas fa-headset"></i>Friend List</li>
      <li><i class="fas fa-headset"></i>Communities</li>
      <li><i class="fas fa-headset"></i>My Matches</li>
    </ul>
  </div>

  <div class="post-msg form-login">
      <% if current_user =! nil %>
    <div class="d-flex justify-content-around">
      <div class="post-form">
        <%= simple_form_for [@community, @post] do |f| %>
          <%= f.input :content %>
          <%= f.input :photo, as: :file%>
          <%= f.input :video, as: :file %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
    <hr class="hr">
    <% end %>
    <% @posts.each do |post| %>
      <%# <%= current_user.username %>
      <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" class="avatar" id="post-avatar" alt="avatar"><h6>User</h6>
      <% if post.photo %>
        <h5><%= post.content %></h5>
        <%= image_tag(post.photo, class: "post-img") %>
      <% elsif post.video %>
        <p><%= post.content %></p>
        <%= video_tag(post.video) %>
      <% else %>
        <h5><%= post.content %></h5>
      <% end %>
      <small><%= Time.now %></small>
       <%# <small class="text-right flex-shrink-0"><%= link_to 'delete', community_posts_path(post), method: :delete, data: { confirm: "Are you sure you want to remove #{post}"}, class: 'text-danger' %>
    <hr class="hr">
    <% end %>
  </div>

  <div class="stuffs">
    <div class="stuf">
      <i class="fas fa-headset"></i>players
    </div>

    <div class="stuf">
      <i class="fas fa-headset"></i>players
    </div>
  </div>
</div>
