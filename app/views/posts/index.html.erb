<div>
  <h1 class="community-h1"  ><%= @community.title %></h1>
</div>
<% if current_user =! nil %>
  <div class="d-flex justify-content-around">
    <div class="post-form">
      <%= simple_form_for [@community, @post] do |f| %>
        <%= f.input :content %>
        <%= f.input :photo %>
        <%= f.input :video %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
  <% end %>

<div class="main-page">

  <div class="sidebar">
    <ul>
      <li><i class="fas fa-headset"></i>Friend List</li>
      <li><i class="fas fa-headset"></i>Communities</li>
      <li><i class="fas fa-headset"></i>My Matches</li>
    </ul>
  </div>

  <div class="post-msg form-login">

    <% @posts.each do |post| %>
      <%= Time.now %>
      <%# <%= current_user.username %> %>
      <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" class="avatar" alt="avatar">
      <% if post.photo %>
        <p><%= post.content %></p>
        <%= image_tag(post.photo, class: "post-img") %>
      <% elsif post.video %>
        <p><%= post.content %></p>
        <%= video_tag(post.video) %>
      <% else %>
        <p><%= post.content %></p>
      <% end %>
    <hr>
    <% end %>
  </div>

  <div class="stuffs">
    <div class="stuf">
      <i class="fas fa-headset"></i>players
    </div>

    <div class="stuf">
      <i class="fas fa-headset"></i>players
    </div>
  </div>
</div>
